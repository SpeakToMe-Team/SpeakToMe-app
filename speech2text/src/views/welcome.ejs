<% layout('layout') %>

<div id="app" class="welcome-page">
    <div class="welcome-container">
        <% if (success_msg.length > 0){ %>
            <div class="alert alert-success"><%= success_msg %></div>
        <% } %>

        <div> 
            <img class="logo animated bounceInDown" src="/images/microphone.png">
        </div>
        <h1 class="animated rollIn">{{ title }}</h1>

        <div class="auth">
            <p class="animated fadeIn">Login or Register with :</p>
            <div>
                <a href="/auth/google" class="btn btn-danger authen animated fadeIn"><span class="fa fa-google"></span> Google</a>
                <a href="/auth/facebook" class="btn btn-primary authen animated fadeIn"><span class="fa fa-facebook"></span> Facebook</a>
            </div>
            <div>
                <a href="/auth/login" class="btn btn-secondary authen animated fadeIn">
                <span class="fa fa-user"></span> Sign in
                </a> 
                <a href="/auth/signup" class="btn btn-secondary authen animated fadeIn">
                <span class="fa fa-user"></span> Sign up
                </a>
            </div>
        </div>
    </div>
</div>


<script>
    var app = new Vue({
        el: "#app",
        data: {
            title: "SpeakToMe"
        },
        methods: {
        }
    });
</script>