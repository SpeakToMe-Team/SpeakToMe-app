<% layout('../layout') %>

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">

        <% if (error_msg.length > 0){ %>
        <div class="alert alert-danger"><%= error_msg %></div>
        <% } %>

        <form class="form-signin" action="/auth/login" method="post">
            <h2 class="form-signin-heading"><span class="fa fa-sign-in"></span> Login</h2>
            <label for="inputEmail" class="sr-only">Email address</label>
            <input name="email" type="email" id="inputEmail" class="form-control" placeholder="Your email address" required autofocus>
            <label for="inputPassword" class="sr-only">Password</label>
            <input name="password" type="password" id="inputPassword" class="form-control" placeholder="Your password" required>
            <br />
            <button class="btn btn-lg btn-success" type="submit">Login</button>
        </form>
        <br />
        Need an account ? <a href="/auth/signup"><span class="fa fa-user"></span> Signup</a><br />
        Or go <a href="/auth"><span class="fa fa-home"></span> home</a>


    </div>

</div>