<% layout('../layout') %>

<div class="sign">
        <div class="signIn">

        <% if (error_msg.length > 0){ %>
        <div class="alert alert-danger"><%= error_msg %></div>
        <% } %>

        <div class="frame">
                <h2 class="title"><span class="fa fa-sign-in"></span> Login</h2>
                <div class="form">
        <form class="form-signin" action="/speech2text/auth/login" method="post">
            
            <label for="inputEmail">Email address</label>
            <input name="email" type="email" id="inputEmail" class="form-control" placeholder="Your email address" required autofocus>
            <label for="inputPassword">Password</label>
            <input name="password" type="password" id="inputPassword" class="form-control" placeholder="Your password" required>
            <br />
            <button type="submit">Login</button>
        </form>

                </div>
        
        <p>Need an account ? <a href="/speech2text/auth/signup"><span class="fa fa-user"></span> Signup</a></p>
        <p>Or go <a href="/speech2text/auth"><span class="fa fa-home"></span> home</a></p> 


    </div>

</div>


